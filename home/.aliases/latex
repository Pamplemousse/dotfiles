alias pdflatex="\
  docker run \
    --name pdflatex \
    --rm -it \
    --volume $(pwd):/app \
    --workspace /app \
    pamplemousse/latex \
    pdflatex"

alias bibtex="\
  docker run \
    --name bibtex \
    --rm -it \
    --volume $(pwd):/app \
    --workspace /app \
    pamplemousse/latex \
    bibtex"

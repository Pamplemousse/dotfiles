alias pdflatex="\
  docker run \
    --name pdflatex \
    --rm -it \
    --user $(id -u):$(id -g) \
    --volume $(pwd):/app \
    --workdir /app \
    pamplemousse/latex \
    pdflatex"

alias bibtex="\
  docker run \
    --name bibtex \
    --rm -it \
    --user $(id -u):$(id -g) \
    --volume $(pwd):/app \
    --workdir /app \
    pamplemousse/latex \
    bibtex"

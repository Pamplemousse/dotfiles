    yarn"

alias nsp=" \
  docker run \
    --rm -it \
    --volume $(pwd):/data \
    --workspace /data \
    pamplemousse/nodejs \
    nsp"

alias standard=" \
  docker run \
    --name http-server \
    --rm \
    --volume $(pwd):/data \
    --workspace /data \
    pamplemousse/nodejs \
    standard"

alias http-server=" \
  docker run \
    --name http-server \
    --rm -it \
    --publish 8080:8080 \
    --user $(id -u):$(id -g) \
    --volume $(pwd):/data \
    --workdir /data \
    pamplemousse/nodejs \
    http-server"

alias json-server=" \
  docker run \
    --name json-server \
    --rm -it \
    --publish 3000:3000 \
    --user $(id -u):$(id -g) \
    --volume $(pwd):/data \
    --workdir /data \
    pamplemousse/nodejs \
    json-server"


}

function standard () {
  docker run \
    --name http-server \
    --rm \
    --user $(id -u):$(id -g) \
    --volume $(pwd):/data \
    --workdir /data \
    pamplemousse/nodejs \
    standard $@
}

function yarn () {
  docker run \
    --rm -it \
    --user $(id -u):$(id -g) \
    --volume $(pwd):/data \
    --workdir /data \
    pamplemousse/nodejs \
    yarn $@;
}

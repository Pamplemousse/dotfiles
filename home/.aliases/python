alias python="\
  docker run \
    --name python \
    --rm -it \
    -v $(pwd):/app \
    -w /app \
    pamplemousse/python \
    python"

alias http-prompt="\
  docker run \
    --name http-prompt \
    --rm -it \
    pamplemousse/python \
    http-prompt"

alias yamllint="\
  docker run \
    --name yamllint \
    --rm -it \
    -v $(pwd):/app \
    -w /app \
    pamplemousse/python \
    yamllint"

alias grip="\
  docker run \
    --name grip \
    --rm -it \
    -v $(pwd):/app \
    -w /app \
    --net=host \
    pamplemousse/python \
    grip"

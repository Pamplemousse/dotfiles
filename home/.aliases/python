alias python="\
  docker run \
    --name python \
    --rm -it \
    --volume $(pwd):/app \
    --workspace /app \
    pamplemousse/python \
    python"

alias http-prompt="\
  docker run \
    --name http-prompt \
    --rm -it \
    pamplemousse/python \
    http-prompt"

alias yamllint="\
  docker run \
    --name yamllint \
    --rm -it \
    --volume $(pwd):/app \
    --workspace /app \
    pamplemousse/python \
    yamllint"

alias grip="\
  docker run \
    --name grip \
    --rm -it \
    --volume $(pwd):/app \
    --workspace /app \
    --net=host \
    pamplemousse/python \
    grip"

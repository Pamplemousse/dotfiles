[user]
  name = Pamplemousse
  email = xavier.maso@net-c.com

[color]
    diff = auto
    status = auto
    branch = auto
    ui = true
[color "diff"]
    whitespace = red reverse

[push]
    default = current

[core]
    editor = subl
    excludesfile = ~/.gitignore_global
    whitespace = space-before-tab,cr-at-eol

[alias]
    st = status -sb
    co = checkout
    pl = pull
    p = push
    undo = reset --soft HEAD^
    who = shortlog -sn
    gol = log --pretty=format:\"%h %an %ad %s\" --abbrev-commit --date=short
    lol = log --graph --decorate --pretty=oneline --abbrev-commit

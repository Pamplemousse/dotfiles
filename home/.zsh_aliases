# GIT
alias gst="git status -s"
alias gll="git log --pretty=format:'%C(yellow)%h %C(cyan)%ad %C(reset)%s %C(green)[%cn]' --decorate --date=short --graph"
alias gd="git diff --ignore-space-at-eol -b -w --ignore-blank-lines"
